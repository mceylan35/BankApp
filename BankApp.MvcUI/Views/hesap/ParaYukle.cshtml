@model BankApp.MvcUI.Entities.tbl_Hesaplar
@{
    ViewBag.Title = "ParaYukle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Gönderen Hesap</th>

                <th scope="col">Miktar</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.hesapId, "", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">

                            @Html.DropDownList("yuklenicekHesap", ViewBag.yuklenicekHesap as SelectList, "Hesap Seçiniz", new { @class = "form-control" })


                            @*@Html.DropDownList("gonderen", null, htmlAttributes: new { @class = "form-control" })*@

                            @Html.ValidationMessageFor(model => model.hesapId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </th>
                <td>
                    <div class="form-group">
                        @Html.LabelFor(model => model.bakiye, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.bakiye, new { htmlAttributes = new { @class = "form-control sayi" } })
                            @Html.ValidationMessageFor(model => model.bakiye, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
                <td><input type="submit" class="btn btn-warning" id="bakiyeYukle" value="Gönder" /></td>
            </tr>

        </tbody>
    </table>
</div>

